{% extends 'admin.base.html.twig' %}

{% block title %}Hello Ajouter un produit ou astuces!{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">

{% endblock %}

{% block body %}
    {% include 'admin/partials/navbar.html.twig'%}
        <div class="content-wrapper">
            <div class="container-fluid">
                {% include 'admin/partials/flash.html.twig'%}
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                    <li class="breadcrumb-item active">Ajouter un produit ou astuces</li>
                </ol>

                {{ form_start(form) }}

                <div class="row">
                    <div class="form-group col-sm-6">
                        {{ form_row(form.nom) }}
                        {% if form_errors(form.nom) is not empty  %} <div class="alert alert-danger">Ce nom exixte deja</div>  {% endif %}
                    </div>
                    <div class="form-group col-sm-6">
                        {{ form_row(form.cathegorie) }}
                    </div>
                    <div class="form-group col-sm-12">
                        {{ form_row(form.action, { 'label': 'Ce que le produit fait'}) }}
                    </div>
                    <div class="form-group col-sm-6">
                        {{ form_row(form.prix) }}
                    </div>
                    <div class="form-group col-sm-6">
                        {{ form_row(form.imageFile) }}
                    </div>
                    <div class="form-group col-12">
                        {{ form_row(form.description) }}
                    </div>
                </div>
                {{ form_widget(form) }}

                <button class="btn btn-success col-12">Enr√©gistrer le produits</button>
                <br><br>
                {{ form_end(form) }}

            </div>

        </div>
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>
        <script>
            $('#produits_description').summernote({
                placeholder: 'Description de l\'article ',
                tabsize: 4,
                height: 200
            });
        </script>
    {% endblock %}
{% endblock %}
